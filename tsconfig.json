{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "rootDir": "src/",
    "moduleResolution": "node",
    "importHelpers": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "types": ["mocha", "chai"],
    "module": "esnext",
    "target": "ES2017",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017"
    ],
    "declaration": true /* Generates corresponding'.d.ts' files. */,
    "declarationDir": "./dist/typings/" /* build '.d.ts' files to ./dist/typings */,
    "outDir": "./dist/esm/" /* build to ./dist/esm/ */,
  },
  "files": ["./src/index.ts"],
  "include": ["src", "test"],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "../../node_modules/",
    "../../node_modules/*"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
